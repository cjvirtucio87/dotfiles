#!/bin/bash

GIT_CONFIG_FILES="${HOME}/.git_config_files"

file_check() {
    local coord="$1"; 

    if [[ ! -f "${GIT_CONFIG_FILES}/${coord}" ]]; then
        echo "Error! Git config file for coord, '${coord}', does not exist.";
        exit 1;
    fi
}

set_git_config() {
    local coord="$1";
    local git_config_file="${GIT_CONFIG_FILES}/${coord}";

    cat "$git_config_file" > "${HOME}/.gitconfig";
}

main() {
    local coord="$1";

    file_check "${coord}";

    case "${coord}" in
        'mitre.git'*)
            set_git_config "${coord}";
            ;;
        'personal.git'*)
            set_git_config "${coord}";
            ;;
        *)
            echo "Invalid coordinate, '${coord}'";
            exit 1;
            ;;
    esac
}

main $@
