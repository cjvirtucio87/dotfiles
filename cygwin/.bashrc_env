HOSTNAME=$(hostname)
if [[ $HOSTNAME == "caasd-portal-automation.mitre.org" ]]; then
    . /opt/build/automation/env/bashrc
    . /opt/build/automation/env/bash_profile
    
    # FPL Configuration (yes, order matters)
    # if you work on asias
    if [ -d /opt/build/asias/bin/asiasEnv ]; then
        . /opt/build/asias/bin/asiasEnv
    fi
 
    # if you work on facility safety
    if [ -d /opt/build/facility/bin/facilityEnv ]; then
        . /opt/build/facility/bin/facilityEnv
    fi
 
    # if you work on oversight
    if [ -f /opt/build/oversight/bin/oversightEnv ]; then
        . /opt/build/oversight/bin/oversightEnv
    fi
 
    # if you work on event analyzer
    if [ -f /opt/build/ea/bin/eaEnv ]; then
        . /opt/build/ea/bin/eaEnv
    fi
 
    # if you work on all caasd portals
    if [ -f /opt/build/caasd/bin/caasdEnv ]; then
        . /opt/build/caasd/bin/caasdEnv
    fi
fi
